{% extends "base.html.twig" %}

{% block title %}
	this is a simple homepage
{% endblock %}

{% block body %}
<h1>Startshop: your monopoly-busting option for starship parts!</h1>
<div>
	total of startship {{ships|length}} starships

	{% if ships|length > 2 %}
		<p>
			That's a shipload of ships!
		</p>
	{% endif %}
	
</div>

<div>
    <h2>My Ship</h2>
    <table>
        <tr>
            <th>Name</th>
            <td>{{ myShip.name }}</td>
        </tr>
        <tr>
            <th>Class</th>
            <td>{{ myShip.class }}</td>
        </tr>
        <tr>
            <th>Captain</th>
            <td>{{ myShip.captain }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ myShip.status }}</td>
        </tr>
    </table>
</div>
{% endblock %}
